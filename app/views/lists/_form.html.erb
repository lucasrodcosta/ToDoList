<%= simple_form_for(@list, remote: true) do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <% if f.error_notification %>
          <%= f.error_notification %>
        <% end %>
      </div>

      <div class="modal-body">
        <div class="form-inputs">
          <%= f.input :name, label: "Nome", input_html: { size: 50 } %>
          <%= f.input :description, label: "Descrição", as: :text, input_html: { cols: 50, rows: 5 } %>
          <%= f.input :visibility, label: "Visibilidade", as: :select, collection: visibility_enum, include_blank: false, input_html: {value: visibility_enum.first} %>
        </div>
      </div>

      <div class="modal-footer">
        <div class="form-actions">
          <%= link_to "Cancelar", nil, :class => "btn btn-default", :id => "cancel-task" , :"data-dismiss" => "modal", :"data-target" => '#cancel-task' %>
          <%= f.button :submit, :class => "btn btn-primary", :id => "create-task" %>
        </div>
      </div>

    </div>
  </div>
<% end %>