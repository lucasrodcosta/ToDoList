<h5 class="breadcrumb"><%= link_to "Minhas listas", lists_path %> > <%= @list.name %></h5>
<h3 class="page-title">Crie/edite suas tarefas</h3>

<table class="table">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Data limite</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= format_description(task.description) %></td>
        <td><%= task.date %></td>
        <td><%= task.done %></td>
        <td><%= link_to 'Editar', edit_task_path(task), :class => 'edit-task', :"data-toggle" => 'modal', :"data-target" => '#task-modal', :remote => true %></td>
        <td><%= link_to 'Deletar', task, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir esta tarefa?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="add-task-content">
  <%= image_tag('add_icon.png', :class => 'add-task') %>
  <%= link_to "Adicionar tarefa", new_task_path(list: @list), :class => 'add-task', :"data-toggle" => 'modal', :"data-target" => '#task-modal', :remote => true %>
</div>

<div class="bootstrap-modal modal fade in" id="task-modal" aria-hidden="false"></div>